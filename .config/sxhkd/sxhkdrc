#emacs
super + e
    emacsclient -c

#Browser
super + w
    firefox

#Btop
super + t
    st -e btop

#Power Menu
super + x
    rofi -show power-menu -modi power-menu:~/.config/rofi/scripts/rofi-power-menu

#Rofi
super + p
    rofi -show drun

#Rofi theme selector
super + r
    rofi-theme-selector

#Lutris
super + g
    lutris

#Pavucontrol
super + v
    pavucontrol

#ncmpcpp
super + m
    st -e ncmpcpp

#Network Manager
super + n
    bash ~/.config/rofi/scripts/rofi-network-manager.sh

#steam
super + s
    steam-runtime -noverifyfiles

#st
super + Return
    st

#youtube-rofi
super + y
    yt-rofi

#Xkill
super + Escape
    xkill

#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
    st -e ranger

#tor browser
super + shift + w
    torbrowser-launcher

#rofi drun
super + shift + d
    rofi -show drun

#reload sxhkd:
super + shift + s
    pkill -USR1 -x sxhkd


