#################################################################
# SUPER + ... KEYS
#################################################################

#emacs
super + e
    emacsclient -c

#Browser
super + w
    firefox

#Btop
super + t
    st -e btop

#Power Menu
super + x
    rofi -show power-menu -modi power-menu:~/.config/rofi/scripts/rofi-power-menu.sh

#Rofi
super + p
    rofi -show drun -show-icons

#Rofi theme selector
super + r
    rofi-theme-selector

#Lutris
super + g
    lutris

#Maim (Select Region)
super + s
    maim -s | xclip -selection clipboard -t image/png && notify-send "Screenshot taken" "Copied to clipboard"

#Rofi
super + d
    rofi -show drun -show-icons

#Pavucontrol
super + v
    pavucontrol

#ncmpcpp
super + m
    st -e ncmpcpp

#Maim (Select Region)
super + b
    maim -s | xclip -selection clipboard -t image/png && notify-send "Screenshot taken" "Copied to clipboard"

#Network Manager
super + n
    bash ~/.config/rofi/scripts/rofi-wifi-menu.sh

#st
super + Return
    st

#lbry
super + y
    lbry

#Xkill
super + Escape
    xkill

#show/hide polybar
super + apostrophe
    polybar-msg cmd show && bspc config top_padding 30
super + semicolon
    polybar-msg cmd hide && bspc config top_padding 0

