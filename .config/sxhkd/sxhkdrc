    #nvtop
    #radeontop

#rofi drun
super + shift + d
    rofi -show drun

#steam
super + shift + g
    steam-runtime -noverifyfiles

#youtube-rofi
super + shift + y
    yt-rofi

#reload sxhkd:
super + shift + s
    pkill -USR1 -x sxhkd

